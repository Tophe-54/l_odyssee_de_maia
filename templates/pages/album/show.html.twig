{% extends 'base.html.twig' %}

{% block title %}{{ album.title }}{% endblock %}

{% block body %}
<!-- Reste de la page -->
<div class="container">
    <div class="row">
        <div class="col-8 my-4 mx-auto">
            <h3>
                {{ album.title }}
                <small class="text-muted">Samedi 13 février 2021</small>
            </h3>
            <div id="carouselControls" class="carousel slide bg-dark" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="./photos/BAINS_PAUL_ET_CHARLIE_44_266x400.jpg" class="d-block h-100 mx-auto" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="./photos/BAINS_PAUL_ET_CHARLIE_45_400x400.jpg" class="d-block mx-auto" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Précédent</span>
                </a>
                <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Suivant</span>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock body %}